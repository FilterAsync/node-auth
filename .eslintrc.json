{
	"env": {
		"node": true,
		"es6": true
	},
	"extends": [
		"plugin:@typescript-eslint/recommended",
		"prettier",
		"plugin:prettier/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"project": "./tsconfig.json"
	},
	"plugins": ["eslint-plugin-prettier", "eslint-plugin-import", "promise"]
}
