{
	"env": {
		"node": true,
		"es6": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:prettier/recommended"
	],
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module",
		"allowImportExportEverywhere": true
	},
	"plugins": [
		"eslint-plugin-prettier",
		"eslint-plugin-import"
	],
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"endOfLine": "auto"
			}
		],
		"eqeqeq": [
			"warn",
			"always"
		],
		"no-else-return": "error",
		"no-eval": "error",
		"require-await": "warn",
		"no-useless-return": "error",
		"strict": [
			"error",
			"global"
		],
		"no-useless-catch": "error",
		"semi": [
			"error",
			"always"
		]
	}
}
