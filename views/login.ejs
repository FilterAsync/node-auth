<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="../public/styles/normalize.css" type="text/css" />
    <link rel="stylesheet" href="../public/styles/customize.css" type="text/css" />
    <%- include ("./includes/resources.ejs") %>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=no" />
    <meta name="title" content="Login" />
    <meta name="theme-color" content="#ffffff" />
    <meta name="og:title" content="Login" />
    <title>Login</title>
</head>
<body>
    <div class="container mt-5 mb-5">
        <div class="card shadow">
            <div class="card-header">
                <h4 class="card-title">
                    <span class="fas fa-key" aria-hidden="true"></span>
                    Login
                </h4>
            </div>
            <div class="card-body">
                <%
                const isError = !!messages.error
                %>
                <form class="needs-validation <%= isError ? "was-validated" : "" %>" action="/login<%= redirectUri ? "?redirectUri=" + encodeURIComponent(redirectUri) : "" %>" autocomplete="on" method="POST" novalidate="novalidate">
                    <% if (isError) { %>
                        <div class="alert alert-danger">
                            <span class="fas fa-exclamation-circle" aria-hidden="true"></span>
                            <%= messages.error + "." %>
                        </div>    
                    <% } else if (sessionExpired === "true") { %>
                        <div class="alert alert-danger">
                            <span class="fas fa-exclamation-circle" aria-hidden="true"></span>
                            Your session has expired. Please log in.
                        </div>
                    <% } %>
                    <div class="form-floating mb-4">
                        <input type="text" autocomplete="username" id="credential" name="eou" class="form-control" placeholder="Username/Email address" required aria-required="true">
                        <label for="credential">
                            Username/Email address
                        </label>
                        <div class="invalid-feedback">
                            Username/Email address cannot be empty.
                        </div>
                    </div>
                    <div class="form-floating mb-4">
                        <input type="password" autocomplete="current-password" id="password" name="password" title="Password" aria-label="Password" class="form-control" minlength="8" placeholder="Password" required aria-required="true">
                        <label for="password">
                            Password
                        </label>
                        <div class="invalid-feedback">
                            Password must be at least 8 characters.
                        </div>
                    </div>
                    <div class="form-check mb-4">
                        <input type="checkbox" name="rem-me" id="rem-me" class="form-check-input">
                        <label for="rem-me" class="form-check-label">
                            Remember Me
                        </label>
                    </div>
                    <button type="submit" class="btn btn-primary" disabled aria-disabled="true">
                        Log in
                    </button>
                </form>
            </div>
            <div class="card-footer text-center">
                <a href="/register" target="_self">
                    Don't have an account
                </a>
                <span class="mx-2" aria-hidden="true">
                    &bull;
                </span>
                <a href="/reset-password" target="_self">
                    Lost Password
                </a>
                <div role="separator" class="mb-4" aria-hidden="true"></div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
    (function() {
        "use strict";
        const email = $('#credential'),
        password = $('#password'),
        submitBtn = $('button[type="submit"]');
        try {
            var remMeData = JSON.parse(
                decodeURIComponent(document.getCookie("rem-me"))
            );
        } catch {
            remMeData = void 0;
        }
        if (remMeData) {
            email.val(remMeData?.username);
            password.val(remMeData?.password);
            submitBtn.removeDisableAttr();
            $("#rem-me").prop("checked", true);
        }
        [email, password].forEach(field => {
            field.on('input', function() {
                if (email.val() && password.val()) {
                    submitBtn.removeDisableAttr();
                    return;
                }
                submitBtn.addDisableAttr();
            });
        });
        const forms = document.querySelectorAll(".needs-validation");
        Array.prototype.slice.call(forms).forEach(form => {
            form.addEventListener("submit", event => {
                submitBtn.addDisableAttr();
                window.loadingSymbol.prependTo(submitBtn);
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                    submitBtn.removeDisableAttr();
                }
                form.classList.add("was-validated");
            }, false);
        });
    })();
    </script>
</body>
</html>
