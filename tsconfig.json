{
	"compilerOptions": {
		"module": "CommonJS",
		"esModuleInterop": true,
		"strict": true,
		"target": "ESNext",
		"moduleResolution": "Node",
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"allowUnreachableCode": false,
		"removeComments": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noUnusedLocals": true,
		"allowUnusedLabels": false,
		"pretty": true
	},
	"include": ["src/**/*.ts", "*.ts"],
	"exclude": ["node_modules/**", "views/**", "tests/**"]
}
